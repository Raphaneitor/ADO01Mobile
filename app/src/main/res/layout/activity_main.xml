<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de produtos"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginTop="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Preço de custo: "
            android:gravity="center"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/txtCustoProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Preço de venda: "
            android:textSize="14sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/txtVendaProduto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Produto: "
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8sp" />

        <EditText
            android:id="@+id/txtProduto"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_weight="1"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:scrollbars="vertical" />

        <EditText
            android:id="@+id/txtNomeAnotacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10sp"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnLucroPrejuizo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Lucro ou prejuízo?"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnAdicionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Adicionar a lista"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnAbrir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Abrir"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnLimpar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Limpar"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>